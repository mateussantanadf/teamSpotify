<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.mateus.teamspotify.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyPlaylistsServlet</servlet-name>
        <servlet-class>br.com.mateus.teamspotify.controller.MyPlaylistsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <servlet-class>br.com.mateus.teamspotify.controller.EfetivaCadastroServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <servlet-class>br.com.mateus.teamspotify.controller.NovoUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyPlaylistsServlet</servlet-name>
        <url-pattern>/myPlaylists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EfetivaCadastroServlet</servlet-name>
        <url-pattern>/efetivacadastro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NovoUsuarioServlet</servlet-name>
        <url-pattern>/novousuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
